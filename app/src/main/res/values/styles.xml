<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Disky" parent="Base.Theme.Disky" >
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">@drawable/icon_logo</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="31">?attr/colorSurface</item>

        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="materialCardViewStyle">@style/PrimaryCardView</item>
        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="Widget.App.LinearProgressIndicator" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackThickness">6dp</item>
        <item name="trackCornerRadius">4dp</item>
        <item name="indicatorColor">?attr/colorLinearIndicator</item>
    </style>

    <style name="BaseCircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="trackThickness">4dp</item>
        <item name="trackCornerRadius">4dp</item>
        <item name="indicatorColor">?attr/colorCircularIndicator</item>
    </style>

    <style name="CircularProgressBackground" parent="BaseCircularProgressIndicator">
        <item name="indicatorColor">?attr/colorCircularBackground</item>
    </style>

    <!-- Card Styles need to be applied to the card directly.-->
    <style name="PrimaryCardView" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">?attr/colorSecondaryContainer</item>
        <item name="cardCornerRadius">@dimen/cardCornerRadius</item>
        <item name="contentPadding">@dimen/cardPadding</item>
    </style>

    <style name="PopupMenu" parent="android:Widget.Material.PopupMenu">
        <item name="android:popupBackground">@drawable/shape_popup_background</item>
        <item name="android:popupElevation">0dp</item>
    </style>

    <!-- Todo: Check if this is actually used -->
    <style name="MainMenu" parent="android:Widget.Material.PopupMenu">
        <item name="android:textColorPrimary">#fa0</item>
        <item name="android:iconTint">@color/intro_color2</item>
        <item name="android:popupBackground">@drawable/shape_popup_background</item>
        <item name="android:popupElevation">0dp</item>
    </style>


    <style name="ModalBottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <item name="behavior_fitToContents">true</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="BottomSheetButton" parent="Widget.Material3.Button.IconButton">
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="backgroundTint">?attr/colorPrimaryContainer</item>
        <item name="cornerRadius">8dp</item>
    </style>

</resources>